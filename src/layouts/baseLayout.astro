---
import '../styles/global.css';
import Header from '../components/header.astro';
const { pageTitle } = Astro.props;
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle}</title>
        <meta name="description" content="Restaurante Ixmucare en Paraíso, Tabasco. Disfruta de cocina tradicional, ambiente familiar y excelente servicio.">
        <meta name="keywords" content="Restaurante, Ixmucare, Cocina tradicional, Paraíso, Tabasco, Comida mexicana, Platillos típicos, Ambiente familiar, Servicio excelente">
        <meta name="robots" content="index, follow" />
        <link rel="canonical" href="https://ixmucare.netlify.app/" />
    </head>
    <body class="bg-[#588157]">
    <Header />
    <main>
        <h1>{pageTitle}</h1>
        <slot />
    </main>
    </body>
</html>
